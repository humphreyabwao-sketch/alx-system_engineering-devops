#!/bin/bash

# Function to install Nginx
install_nginx()
{
if ! command -v nginx &>/dev/null; then
        sudo apt update
        sudo apt install -y nginx
    fi
}

# Function to configure Nginx with custom header
configure_nginx()
{
    local hostname
    hostname=$(hostname)

    # Create an Nginx configuration file for the custom header
    cat <<EOF | sudo tee /etc/nginx/sites-available/custom_header > /dev/null
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location / {
        add_header X-Served-By $hostname;
        root /var/www/html;
        index index.html index.htm;
    }
}
EOF

    # Create a symbolic link to enable the configuration
    sudo ln -s /etc/nginx/sites-available/custom_header /etc/nginx/sites-enabled/

    # Test the Nginx configuration
    sudo nginx -t

    # Reload Nginx to apply the changes
    sudo systemctl reload nginx
}

# Main execution
main()
{
    install_nginx
    configure_nginx
}

# Run the main function
main
